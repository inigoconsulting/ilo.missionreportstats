<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="ilo.missionreportstats">
    <body>
        <metal:main fill-slot="content-core">
            <metal:content-core define-macro="content-core">
                <table>
                    <tr>
                        <td tal:condition="python: context.offices and len(context.offices) > 1">
                            <h3>Offices</h3>
                            <ul>
                                <li tal:repeat="item view/by_offices">
                                    <span tal:content="item/elem"></span> (<span tal:content="item/count"></span>)
                                </li>
                            </ul>
                        </td>
                        <td tal:condition="python: len(view.by_themes()) ">
                            <h3>Themes</h3>
                            <ul>
                                <li tal:repeat="item view/by_themes">
                                    <span tal:content="item/elem"></span> (<span tal:content="item/count"></span>)
                                </li>
                            </ul>
                        </td>
                        <td tal:condition="python: len(view.by_destination()) ">
                            <h3>Destination</h3>
                            <ul>
                                <li tal:repeat="item view/by_destination">
                                    <span tal:content="item/elem"></span> (<span tal:content="item/count"></span>)
                                </li>
                            </ul>
                        </td>
                    </tr>
                </table>
            </metal:content-core>
        </metal:main>
    </body>
</html>

